<div class="main">
  <%= form_for :user, url: users_path do |user| %>  
  <div class="field"> 
    <%= user.text_field :first_name, :placeholder => :first_name %> 
  </div> 
    <div class="field"> 
    <%= user.text_field :last_name, :placeholder => :last_name %> 
  </div> 
    <div class="field"> 
    <%= user.email_field :email, :placeholder => :email %> 
  </div> 
    <div class="field"> 
    <%= user.password_field :password, :placeholder => :password %> 
  </div> 
  <ul class="inline">
  <li><div class="actions"> 
    <%= user.submit "Create" %> 
  </div> 
  </li>
  <li>
  <div class="actions">
    <%= user.submit "Cancel" %>
  </div>
  </li>
  </ul>
<% end %>
</div>
